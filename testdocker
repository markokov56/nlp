pipeline {
    agent {
        docker { image 'python' }
    }
    stages {
        stage('Test') {
            steps {
                sh 'python --version'
                sh 'python -m venv env'
                sh 'source ./env/bin/activate' 
                sh 'python -m pip install requests'
                
                echo "executing python script api twitter"
                sh 'python apitwitter_git.py'
            }
        }
    }
}
