pipeline {
    agent {
        docker { image 'python' }
    }
    stages {
        stage('Test') {
            steps {
                sh 'python --version'
                echo "executing python script api twitter"
                withEnv(["HOME=${env.WORKSPACE}"]) {
                    sh 'pip install --user -r requirements.txt'
                    sh 'mongo'
                    sh 'python apitwitter_git.py'
                }
                echo "executing python script api twitter OK"   
            }
        }
    }
}
